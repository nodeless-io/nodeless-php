{
    "name": "nodeless-io/nodeless-php",
    "description": "Nodeless.io PHP client library.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "nodless.io development team"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-bcmath": "*"
    },
    "autoload": {
        "psr-4": {"NodelessIO\\": "src/"}
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "vimeo/psalm": "^4.8",
        "phpunit/phpunit": "^9.5",
        "vlucas/phpdotenv": "^5.5"
    },
    "scripts": {
        "cs-check": [ "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes --using-cache=no --verbose --dry-run" ],
        "cs-fix": [ "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes --using-cache=no" ],
        "psalm": [ "vendor/bin/psalm" ]
    }
}
